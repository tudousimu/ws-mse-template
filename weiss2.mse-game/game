#### packs
pack type:
	name: common
	filter: card.rarity == "C"
pack type:
	name: uncommon
	filter: card.rarity == "U"
pack type:
	name: rare
	filter: card.rarity == "R"
pack type:
	name: double rare
	filter: card.rarity == "RR"
pack type:
	name: climax rare
	filter: card.rarity == "CR"
pack type:
	name: climax common
	filter: card.rarity == "CC"

pack type:
	name: double rare or rare
	selectable: false
	select: proportional
	item:
		name: double rare
		weight: 1
	item:
		name: rare
		weight: 3
pack type:
	name: climax common or climax rare
	selectable: false
	select: proportional
	item:
		name: climax rare
		weight: 1
	item:
		name: climax common
		weight: 3
pack type:
	name: foil common or rare
	selectable: false
	select: proportional
	item:
		name: rare
		weight: 1
	item:
		name: common
		weight: 1
		
pack type:
	name: standard booster pack
	item:
		name: double rare or rare
		amount: 1
	item:
		name: uncommon
		amount: 2
	item:
		name: common
		amount: 4
	item:
		name: climax common or climax rare
pack type:
	name: extra booster pack
	item:
		name: rare
		amount: 1
	item
		name: foil common or rare
		amount: 2
	item:
		name: common
		amount: 2
	item:
		name: climax common
		amount: 1